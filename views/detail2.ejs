    <div class="container">
        <h3 class="h3">All Products </h3>
        <div class="row">
          <% if (data.length > 0) {%>
            <% data.forEach((dataa, index) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="product-grid6">
                    <div class="product-image6">
                        <a href="/product-detail/<%= dataa.product_id %>">
                            <img class="pic-1" src="../images/<%= dataa.product_list_image %>">
                        </a>
                    </div>
                        <div class="product-content">
                          <h3 class="title"><a href="#"><%= dataa.product_name %></a></h3>
                          <div class="price">INR <%= dataa.product_price %>
                              <span>$14.00</span>
                          </div>
                      </div> 
                    <ul class="social">
                        <li><a href="" data-tip="Quick View"><i class="fa fa-search"></i></a></li>
                        <li><a href="" data-tip="Add to Wishlist"><i class="fa fa-shopping-bag"></i></a></li>
                        <li><a href="/add-to-cart/<%= dataa.product_id %>" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
            </div>
            <% }) %>
                       <% } %>
