<!------ Include the above in your HEAD tag ---------->

</head>
<body>
    <!-- Header for the page-->
<%- include('header') -%>

<div class="container">
	<table id="cart" class="table table-hover .table-sm">
    				<thead>
						<tr>
							<th scope="col" style="width:50%">Product</th>
							<th scope="col" style="width:10%">Price</th>
							<th scope="col" style="width:8%">Quantity</th>
							<th scope="col" style="width:22%" class="text-center">Subtotal</th>
							<th scope="col" style="width:10%"></th>
						</tr>
					</thead>
					<tbody>
                        <% if(session.cart){ var kart = session.cart.items; for(i in session.cart.items){console.log(kart[i].item.product_name)}%>
                        <% for(i in kart){ %>
						<tr>
							<td data-th="Product">
								<div class="row">
									<div class="col-sm-2 .d-none .d-sm-block"><img src="http://placehold.it/100x100" alt="..." class="img-responsive"/></div>
									<div class="col-sm-10">
										<p class="nomargin"><%= kart[i].item.product_name %></p>
										<p><%= kart[i].item.product_description %></p>
									</div>
								</div>
							</td>
							<td data-th="Price">INR <%= kart[i].item.product_price %></td>
							<td data-th="Quantity">
								<input type="number" class="form-control text-center" value="<%= kart[i].qty %>">
							</td>
							<td data-th="Subtotal" class="text-center"> <%= kart[i].price %></td>
							<td class="actions" data-th="">
								<button class="btn btn-info btn-lg"><i class="glyphicon glyphicon-refresh"></i></button>
								<a href="/remove/<%= kart[i].item.product_id %>" class="btn btn-danger btn-lg"><i class="glyphicon glyphicon-trash"></i></a>								
							</td>
                        </tr>
                        <%}%>
                    <%}%>      
					</tbody>
					<tfoot>
						<tr class="visible-xl">
							<td class="text-center"><strong>Total <%= session.cart.totalPrice %></strong></td>
						</tr>
						<tr>
							<td><a href="/" class="btn btn-warning btn-lg"><i class="glyphicon glyphicon-chevron-left"></i> Continue Shopping</a></td>
							<td colspan="2" class=".d-none .d-sm-block"></td>
							<td class="hidden-xs text-center"><strong>Total <%= session.cart.totalPrice %></strong></td>
							<td><a href="#" class="btn btn-success btn-block btn-lg">Checkout <i class="glyphicon glyphicon-chevron-right"></i></a></td>
						</tr>
					</tfoot>
				</table>
</div>
<!-- Header for the page-->
<%- include('footer') -%>

  </body>
  </html>