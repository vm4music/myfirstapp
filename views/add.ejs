<html>
<head>
<style>

	#song_table {
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

#song_table td, #song_table th {
    border: 1px solid #ddd;
    padding: 8px;
	overflow: hidden;
}

#song_table tr:nth-child(even){background-color: #f2f2f2;}

#song_table tr:hover {background-color: #ddd;}

#song_table th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: darkcyan;
    color: white;
}
div.center{
	margin: auto;
    border: 3px solid green;
    padding: 10px;
	width: 50%;
	}

</style>
</head>
<body>

<div class="center">
  <form action="/add" method="post" name="form1" enctype="multipart/form-data" onsubmit="return validateForm()">
    <table id="song_table" width="25%" border="0" >
        <tr>
			<th colspan="2">Add Song</th>
		</tr>
		<tr> 
            <td>Name</td>
            <td><input type="text" name="title" id="title" value="<%= title %>" /></td>
        </tr>
        <tr> 
            <td>Author</td>
            <td><input type="text" name="author" value="<%= author %>" /></td>
        </tr>
        <tr> 
            <td>SRC</td>
            <td><input type="text" name="src" value="<%= src %>" /></td>
        </tr>
        <tr> 
            <td>Please upload: </td>
            <td><input type="file" name="filetoupload"/></td>
        </tr>
		<tr> 
            <td></td>
            <td><input type="submit" name="Submit" value="Add" /></td>
        </tr>
    </table>
</form>
</div>

<script>
function validateForm() {
    var x = document.forms["form1"]["filetoupload"].value;
	var y = x.split(".");
    if (y[y.length-1] != "mp3") {
        alert("Please upload an .mp3 file only");
        return false;
    }
}
</script>
</body>
</html>